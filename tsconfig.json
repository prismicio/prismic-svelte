{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,

		"target": "esnext",
		"module": "esnext",
		"declaration": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"types": ["node"],

		"importsNotUsedAsValues": "error",
		"isolatedModules": true,

		"sourceMap": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		}
	},
	"exclude": ["node_modules", "dist", "examples"],

	"include": [
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"decs.d.ts"
	]
}
