{
	"name": "@prismicio/svelte",
	"version": "0.0.0",
	"description": "Svelte plugin, components, and composables to fetch and present Prismic content",
	"keywords": [
		"typescript",
		"prismic"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio/prismic-svelte.git"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json",
		"./SliceZone.svelte": "./dist/SliceZone.svelte",
		"./PrismicLink.svelte": "./dist/PrismicLink.svelte"
	},
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/types.d.ts",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "svelte-kit build",
		"format": "prettier --write .",
		"prepare": "npm run build",
		"release": "npm run build && npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:dry": "standard-version --dry-run",
		"release:alpha": "npm run build && npm run test && standard-version --release-as major --prerelease alpha && git push --follow-tags && npm run build && npm publish --tag alpha",
		"release:alpha:dry": "standard-version --release-as major --prerelease alpha --dry-run",
		"lint": "eslint --ext .js,.ts .",
		"unit": "nyc --reporter=lcovonly --reporter=text --exclude-after-remap=false ava",
		"test": "npm run lint && npm run unit",
		"dev": "svelte-kit dev",
		"preview": "svelte-kit preview",
		"package": "svelte-kit package",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@prismicio/client": "^6.0.0-alpha.15",
		"@prismicio/helpers": "^2.0.0-alpha.9",
		"@prismicio/types": "^0.1.13",
		"@rollup/plugin-inject": "^4.0.2",
		"@sveltejs/kit": "next",
		"@types/node": "^16.10.1",
		"@typescript-eslint/eslint-plugin": "^4.31.2",
		"@typescript-eslint/parser": "^4.31.2",
		"ava": "^3.15.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-tsdoc": "^0.2.14",
		"nyc": "^15.1.0",
		"prettier": "^2.4.1",
		"prettier-plugin-jsdoc": "^0.3.24",
		"rollup-plugin-includepaths": "^0.2.4",
		"siroc": "^0.16.0",
		"sm-commons": "^0.0.23",
		"standard-version": "^9.3.1",
		"svelte": "^3.43.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.9.5",
		"svelte2tsx": "^0.4.6",
		"ts-eager": "^2.0.2",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3"
	},
	"engines": {
		"node": ">=12.7.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
