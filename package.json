{
	"name": "@prismicio/svelte",
	"version": "0.0.2",
	"description": "Svelte plugin, components, and composables to fetch and present Prismic content",
	"keywords": [
		"typescript",
		"prismic"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio/prismic-svelte.git"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"type": "module",
	"exports": {
		".": "./index.js",
		"./package.json": "./package.json"
	},
	"main": "index.js",
	"module": "index.js",
	"types": "index.d.ts",
	"svelte": "./index.js",
	"scripts": {
		"build": "svelte-kit package && shx cp -r src dist/src",
		"dev": "svelte-kit dev",
		"format": "prettier --write .",
		"prepare": "npm run build",
		"release": "npm run build && npm run test && standard-version && git push --follow-tags && npm run build && npm publish ./dist",
		"release:dry": "standard-version --dry-run",
		"release:alpha": "npm run build && npm run test && standard-version --release-as major --prerelease alpha && git push --follow-tags && npm run build && npm publish ./dist --tag alpha",
		"release:alpha:dry": "standard-version --release-as major --prerelease alpha --dry-run",
		"lint": "eslint --ext .js,.ts .",
		"unit": "vitest run --coverage",
		"unit:watch": "vitest watch",
		"test": "npm run lint && npm run unit",
		"preview": "svelte-kit preview",
		"package": "svelte-kit package",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"dependencies": {
		"@prismicio/client": "^6.4.3",
		"@prismicio/helpers": "^2.3.0"
	},
	"devDependencies": {
		"@prismicio/mock": "0.0.10",
		"@prismicio/types": "^0.1.27",
		"@rollup/plugin-inject": "^4.0.4",
		"@sveltejs/kit": "1.0.0-next.328",
		"@typescript-eslint/eslint-plugin": "^5.23.0",
		"@typescript-eslint/parser": "^5.23.0",
		"c8": "^7.11.2",
		"eslint": "^8.15.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"eslint-plugin-tsdoc": "^0.2.16",
		"prettier": "^2.6.2",
		"prettier-plugin-jsdoc": "^0.3.38",
		"shx": "^0.3.4",
		"standard-version": "^9.3.2",
		"svelte": "^3.48.0",
		"svelte-check": "^2.7.0",
		"svelte-preprocess": "^4.10.6",
		"svelte2tsx": "^0.5.9",
		"tslib": "^2.4.0",
		"typescript": "^4.6.4",
		"vitest": "^0.12.4"
	},
	"engines": {
		"node": ">=12.7.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
